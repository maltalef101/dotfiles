#! /bin/sh

# creates an executable file
# bc i am very lazy
[ -z "$1" ] && echo "Entered no name for script.

Usage:
	mks <script name>" && exit 1

cd $HOME/.local/bin

[ -e "$1" ] && { echo "Script $1 already exists! Exiting."; exit 1 ;}

touch "$1"
chmod +x "$1"
echo "#! /bin/sh" >> "$1"
nvim "$1"

cd $HOME
