# vim: filetype=conf

# Basic Settings
set preview true
set previewer preview
#set previewer pistol
set hidden true
set color256 true
set drawbox true
set icons true
set ignorecase true

# Custom Functions
cmd open $fileopen "$f"

cmd mkdir %{{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd chmod %{{
  printf "Mode Bits: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done
}}

cmd sudomkfile ${{
  printf "File Name: "
  read ans
  sudo $EDITOR $ans
}}


cmd fzf_jump ${{
  res="$(find . -maxdepth 3 | fzf --reverse --header='Jump to location')"
  if [ -f "$res" ]; then
    cmd="select"
  elif [ -d "$res" ]; then
    cmd="cd"
  fi
  lf -remote "send $id $cmd \"$res\""
}}

cmd bulk_move ${{
# uses qmv (from package renameutils) for bulk moving
	qmv -f do $(echo $(basename $fx) | xargs)
}}

