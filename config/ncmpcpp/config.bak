#Stolen configs
song_status_format = "{%a - %t}"
song_list_format = "{%a - %t} $R {%l}"
song_window_title_format = "{%a - }{%t}|{%f}"

ncmpcpp_directory = "~/.config/ncmpcpp/"
external_editor = "nvim"
user_interface = "classic"
playlist_display_mode = "classic"

message_delay_time = "1"
playlist_disable_highlight_delay = 1

now_playing_prefix = "$(3)"
now_playing_suffix = "$0"
selected_item_prefix = "$(11)"
current_item_prefix = "$(11)$r"
#browser_playlist_prefix = "$77»$77 "

colors_enabled = "yes"
cyclic_scrolling = "no"
use_console_editor = "yes"
discard_colors_if_item_is_selected = "yes"

header_visibility = "yes"
titles_visibility = "yes"
statusbar_visibility = "yes"
display_remaining_time = "no"

volume_color = "8"
statusbar_color = "8"
header_window_color = "3"
main_window_color = "1"
empty_tag_color = "5"
color2 = "4"

color1 = "white"
state_line_color = "1"
state_flags_color = "2"
window_border_color = "2"
active_window_border = "6"
alternative_ui_separator_color = "black"
player_state_color = "3"

progressbar_color = "3"
