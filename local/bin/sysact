#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="sudo -A zzz" ;;
	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p"; hib="loginctl hibernate"; sus="loginctl suspend" ;;
esac

input() {
	case "$1" in
		shutdown) `${shut:-sudo -A shutdown -h now}` ;;
		reboot) `${reb:-sudo -A reboot}` ;;
		hibernate) `${hib:-sudo -A systemctl suspend-then-hibernate}` ;;
		suspend) `${sus:-sudo -A systemctl suspend}`
	esac

	exit
}

[ -n "$1" ] && input "$1"

cmds="\
ğŸ”’ lock		slock
ğŸšª leave dwm	kill -TERM $(pidof -s dwm)
â™» renew dwm	kill -HUP $(pidof -s dwm)
ğŸ» hibernate	${hib:-sudo -A systemctl suspend-then-hibernate}
ğŸ”ƒ reboot	${reb:-sudo -A reboot}
ğŸ–¥ shutdown	${shut:-sudo -A shutdown -h now}"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
